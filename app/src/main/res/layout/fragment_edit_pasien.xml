<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/namaPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10px"
            android:text="Nama" />

        <EditText
            android:id="@+id/ETEditNamaPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/namaPasien"
            android:layout_marginBottom="10sp" />

        <TextView
            android:id="@+id/NIKPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETEditNamaPasien"
            android:paddingLeft="10px"
            android:text="NIK" />

        <EditText
            android:id="@+id/ETEditNIKPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/NIKPasien"
            android:layout_marginBottom="10sp" />

        <TextView
            android:id="@+id/usiaPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETEditNIKPasien"
            android:paddingLeft="10px"
            android:text="Usia" />

        <EditText
            android:id="@+id/ETEditUsiaPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usiaPasien"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/tanggalLahirPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ETEditUsiaPasien"
            android:paddingLeft="10px"
            android:text="Tanggal Lahir" />

        <EditText
            android:id="@+id/ETEditTanggalLahirPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tanggalLahirPasien"
            android:hint="yyyy-MM-dd"
            android:layout_marginBottom="10sp" />

        <TextView
            android:id="@+id/idPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETEditTanggalLahirPasien"
            android:paddingLeft="10px"
            android:text="Id" />

        <EditText
            android:id="@+id/ETEditIdPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idPasien"
            android:layout_marginBottom="10sp" />

        <TextView
            android:id="@+id/nomorHPPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETEditIdPasien"
            android:paddingLeft="10px"
            android:text="Nomor HP" />

        <EditText
            android:id="@+id/ETEditNomorHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nomorHPPasien"
            android:layout_marginBottom="10sp" />

        <TextView
            android:id="@+id/emailPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETEditNomorHP"
            android:paddingLeft="10px"
            android:text="Email" />

        <EditText
            android:id="@+id/ETEditEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emailPasien"
            android:layout_marginBottom="10sp" />

        <TextView
            android:id="@+id/passwordPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETEditEmail"
            android:paddingLeft="10px"
            android:text="Password" />

        <EditText
            android:id="@+id/ETEditPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordPasien"
            android:layout_marginBottom="10sp" />

        <TextView
            android:id="@+id/idKlinikPasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETEditPassword"
            android:paddingLeft="10px"
            android:text="Id Klinik" />

        <EditText
            android:id="@+id/ETEditIdKlinik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/idKlinikPasien"
            android:layout_marginBottom="10sp" />

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ETEditIdKlinik"
            android:layout_margin="10dp"
            android:text="Edit" />

        <Button
            android:id="@+id/btn_hapus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_edit"
            android:layout_margin="10dp"
            android:text="Hapus" />

    </RelativeLayout>
</ScrollView>